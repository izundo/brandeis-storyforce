                                                            <option value="JoyfulLearner">Joyful Learner (Outcome)</option>
                                                            <option value="GlobalCitizen">Global Citizen (Outcome)</option>
                                                            <option value="Curriculum">Curriculum (Process)</option>
                                                            <option value="Culture">Culture (Process)</option>
                                                            <option value="Character">Character (Process)</option>
                                                            <option value="NewTags">New tags</option>
                                                        </select>*@
                                                    <div class="col s4"><button class="btn waves-effect waves-light new-tags-button" data-file-id="@file.Id"><i class="material-icons left">save</i><span>Save</span></button></div>
                                                </div>
                                                <div id="div_process_tags" class="new-tags">
                                                    Tags Value
                                                    <div class="row" id="process_tags">
                                                        <div class="col s12">
                                                            <div class="row">
                                                                <div class="input-field col s12">
                                                                    <input type="text" id="autocomplete-input-process" class="autocomplete_process">
                                                                    <label for="autocomplete-input">Input Tags</label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    @*<select id="process_tags" class="value_tags">
